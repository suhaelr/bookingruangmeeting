# Mail Configuration for jadixpert.com - DEBUG VERSION
# Add these to your .env file

MAIL_MAILER=smtp
MAIL_HOST=mail.jadixpert.com
MAIL_PORT=465
MAIL_USERNAME=admin@jadixpert.com
MAIL_PASSWORD=your_email_password_here
MAIL_ENCRYPTION=ssl
MAIL_FROM_ADDRESS=admin@jadixpert.com
MAIL_FROM_NAME="${APP_NAME}"

# Debug settings
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Queue settings (optional, for better performance)
QUEUE_CONNECTION=sync

# Additional mail settings for debugging
MAIL_LOG_CHANNEL=mail
MAIL_FAILOVER_MAILERS=smtp,log

# Test email settings
MAIL_TEST_EMAIL=your_test_email@example.com

# Instructions:
# 1. Copy these settings to your .env file
# 2. Replace 'your_email_password_here' with actual password
# 3. Replace 'your_test_email@example.com' with your test email
# 4. Run: php artisan config:clear
# 5. Run: php artisan cache:clear
# 6. Test email sending with: php artisan tinker
#    Then run: Mail::raw('Test email', function($msg) { $msg->to('your_email@example.com')->subject('Test'); });
